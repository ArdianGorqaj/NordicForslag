@model Forslag  

<form method="post">
<div class="border p-3 mt-4">
<div class="row pb-2"> 
<h2 class="text-primary">Opprett forslag</h2>
<hr /> 
</div>
<div asp-validation-summary="All"></div>
<div class="mb-3">
    <label asp-for="Navn"></label>
    <input asp-for="Navn" class="form-control" />
    <span asp-validation-for="Navn" class="text-danger"></span>
</div>

        <div class="mb-3">
            <label asp-for="Tittel"></label>
            <input asp-for="Tittel" class="form-control" />
            <span asp-validation-for="Tittel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Forbedringsforslag"></label>
            <input asp-for="Forbedringsforslag" class="form-control" />
            <span asp-validation-for="Forbedringsforslag" class="text-danger"></span>

            <div class="mb-3">
                <label asp-for="Årsak"></label>
                <input asp-for="Årsak" class="form-control" />
                <span asp-validation-for="Årsak" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Løsning"></label>
                <input asp-for="Løsning" class="form-control" />
                <span asp-validation-for="Løsning" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Mål"></label>
                <input asp-for="Mål" class="form-control" />
                <span asp-validation-for="Mål" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DatoRegistrert"></label>
                <input asp-for="DatoRegistrert" class="form-control" />
                <span asp-validation-for="DatoRegistrert" class="text-danger"></span>
            </div>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Lagre</button>
        <a asp-controller="Forslag" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Tilbake til listen
        </a>
</div>

</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}

